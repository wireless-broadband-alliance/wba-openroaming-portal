{% extends 'base.html.twig' %}

{% block title %}Admin Page Wba{% endblock %}

{% block body %}
    <div class="container mx-auto mt-10">
        <div class="bg-white rounded-lg shadow-md border border-white p-6">
            <h1 class="text-2xl font-semibold mb-6">Update User</h1>

            {{ form_start(form) }}
            <div>
                {{ form_errors(form) }}
            </div>
            <div class="grid grid-cols-2 gap-6">
                <div class="mb-4 mt-1">
                    {{ form_label(form.uuid, 'UUID', {'label_attr': {'class': 'block text-sm font-medium text-gray-700 '}}) }}
                    {{ form_widget(form.uuid, {'attr': {'class': 'text-gray-700 text-base mb-4 mt-3 block w-full rounded-md p-2 shadow-sm focus:outline-none focus:ring-2 '}}) }}
                    {{ form_errors(form.uuid) }}
                </div>
                <div class="mb-4 mt-1">
                    {{ form_label(form.email, 'Email', {'label_attr': {'class': 'block text-sm font-medium text-gray-700 '}}) }}
                    {{ form_widget(form.email, {'attr': {'class': 'text-gray-700 text-base mb-4 mt-3 block w-full rounded-md p-2 shadow-sm focus:outline-none focus:ring-2 '}}) }}
                    {{ form_errors(form.email) }}
                </div>
                <div class="mb-4 mt-1">
                    {{ form_label(form.isVerified, 'Verification', {'label_attr': {'class': 'block text-sm font-medium text-gray-700 '}}) }}
                    {{ form_widget(form.isVerified, {'attr': {'class': 'text-gray-700 text-base mb-4 mt-3 block w-full rounded-md p-2 shadow-sm focus:outline-none focus:ring-2 '}}) }}
                    {{ form_errors(form.isVerified) }}
                </div>
                <div class="mb-4 mt-1">
                    {{ form_label(form.samlIdentifier, 'SAML Identifier', {'label_attr': {'class': 'block text-sm font-medium text-gray-700 '}}) }}
                    {{ form_widget(form.samlIdentifier, {'attr': {'class': 'text-gray-700 text-base mb-4 mt-3 block w-full rounded-md p-2 shadow-sm focus:outline-none focus:ring-2 '}}) }}
                    {{ form_errors(form.samlIdentifier) }}
                </div>
                <div class="mb-4 mt-1">
                    {{ form_label(form.firstName, 'First Name', {'label_attr': {'class': 'block text-sm font-medium text-gray-700 '}}) }}
                    {{ form_widget(form.firstName, {'attr': {'class': 'text-gray-700 text-base mb-4 mt-3 block w-full rounded-md p-2 shadow-sm focus:outline-none focus:ring-2 '}}) }}
                    {{ form_errors(form.firstName) }}
                </div>
                <div class="mb-4 mt-1">
                    {{ form_label(form.lastName, 'Last Name', {'label_attr': {'class': 'block text-sm font-medium text-gray-700 '}}) }}
                    {{ form_widget(form.lastName, {'attr': {'class': 'text-gray-700 text-base mb-4 mt-3 block w-full rounded-md p-2 shadow-sm focus:outline-none focus:ring-2 '}}) }}
                    {{ form_errors(form.lastName) }}
                </div>
            </div>
            <div class="mb-4 mt-1">
                {{ form_label(form.banned, 'Banned', {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
                {{ form_widget(form.banned, {'attr': {'class': 'text-gray-700 text-base mb-4 mt-3 block w-full rounded-md p-2 shadow-sm focus:outline-none focus:ring-2'}}) }}
                {{ form_errors(form.banned) }}
            </div>
            <div class="flex justify-center mt-6">
                <button class="bg-green-500 hover:bg-green-600 text-white font-bold py-2 px-4 rounded transition ease-in duration-200"
                        type="submit">Save
                </button>
            </div>
            {{ form_end(form) }}

            <div class="mt-6 text-center">
                <a href="{{ path('admin_page') }}" class="text-gray-500 hover:text-red-700">Cancel Operation</a>
            </div>
        </div>
    </div>
{% endblock %}


