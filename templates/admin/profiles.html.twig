{% extends 'base.html.twig' %}

{% block title %}Admin Page WBA{% endblock %}

{% block body %}
    <div class="container mx-auto px-4">
        <div class="py-8 text-center">
            <h1 class="text-3xl font-semibold">Admin Page - WBA</h1>
            <p class="text-gray-500 mt-2">This page is for admin use only. Still in development.</p>
        </div>
        <div class="flex justify-between items-center mb-4">
            {% for message in app.session.flashbag.get('success_admin') %}
                <div class="text-white text-base bg-green-500 border-green-500 mt-5 rounded-md p-2 text-center">{{ message }}</div>
            {% endfor %}
        </div>

        <div class="text-center">
            <h1 class="text-2xl font-bold mb-5">Profile Settings</h1>
            <span class="text-base text-gray-400">In this page you can manage all types of encryption for each type of profile provided on this portal.</span>
        </div>

        <div class="flex flex-col sm:flex-row space-y-6 md:space-y-0 sm:space-x-6 mt-5">
            <!-- Windows Profile -->
            <div class="bg-gray-200 hover:bg-gray-300 rounded p-3 w-full sm:w-1/3">
                <img src="{{ asset('resources/logos/Windows.svg') }}" alt="Windows Logo" class="h-8 w-8 mx-auto mb-3">
                <h2 class="text-lg font-semibold text-center">Windows Profiles</h2>
                <p>Windows-specific information goes here:</p>
            </div>

            <!-- Android Profile -->
            <div class="bg-gray-200 hover:bg-gray-300 rounded p-3 w-full sm:w-1/3">
                <img src="{{ asset('resources/logos/Android.svg') }}" alt="Android Logo" class="h-8 w-8 mx-auto mb-3">
                <h2 class="text-lg font-semibold text-center">Android Profiles</h2>
                <p>Android-specific information goes here:</p>
            </div>

            <!-- iOS Profile -->
            <div class="bg-gray-200 hover:bg-gray-300 rounded p-3 w-full sm:w-1/3">
                <img src="{{ asset('resources/logos/iOS.svg') }}" alt="iOS Logo" class="h-8 w-8 mx-auto mb-3">
                <h2 class="text-lg font-semibold text-center">iOS Profiles</h2>
                <p>iOS-specific information goes here:</p>
            </div>
        </div>
        
        <div class="flex justify-center mt-6 mb-6">
            <a href="{{ path('admin_page') }}"
               class="bg-blue-500 hover:bg-blue-600 text-white font-bold py-2 px-4 rounded transition ease-in duration-200">
                Return Dashboard
            </a>
        </div>
    </div>
{% endblock %}
