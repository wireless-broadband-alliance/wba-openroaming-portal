{% extends 'base.html.twig' %}

{% block title %}Admin Page WBA{% endblock %}

{% block body %}
    <div class="container mx-auto px-4">
        <div class="py-8 text-center">
            <h1 class="text-3xl font-semibold">Admin Customize Landing Page - WBA</h1>
            <p class="text-gray-500 mt-2">This page is for admin use only. Still in development.</p>
        </div>

        <form action="{{ path('admin_dashboard_customize') }}" method="post" enctype="multipart/form-data">
            {{ form_row(form._token) }}
            <div class="grid gap-4 md:grid-cols-2 lg:grid-cols-3">
                {% for setting in form %}
                    {# Display only the desired settings #}
                    {% if setting.vars.name in ['CUSTOMER_LOGO', 'OPENROAMING_LOGO', 'WALLPAPER_IMAGE', 'PAGE_TITLE', 'WELCOME_TEXT', 'WELCOME_DESCRIPTION'] %}
                        {% if setting.vars.name in ['CUSTOMER_LOGO', 'OPENROAMING_LOGO'] %}
                            <div class="border border-gray-300 rounded-lg p-4">
                                <div class="text-sm font-medium text-gray-700 mb-2 text-center">
                                    {{ setting.vars.name }}
                                </div>
                                <div class="border border-gray-300 rounded-md p-2 bg-gray-50">
                                    {{ form_widget(setting, {'attr': {'class': 'text-gray-700 text-base block w-full p-2 shadow-sm focus:outline-none focus:ring-2'}}) }}
                                    {{ form_label(setting, null, {'label_attr': {'class': 'hidden'}}) }}
                                    {{ form_errors(setting) }}
                                </div>
                            </div>
                        {% else %}
                            <div class="border border-gray-300 rounded-lg p-4">
                                <div class="text-sm font-medium text-gray-700 mb-2 text-center">
                                    {{ setting.vars.name }}
                                </div>
                                <div class="border border-gray-300 rounded-md p-2">
                                    {{ form_widget(setting, {'attr': {'class': 'text-gray-500 text-base block w-full rounded-md p-2 shadow-sm focus:outline-none focus:ring-2'}}) }}
                                    {{ form_errors(setting) }}
                                </div>
                            </div>
                        {% endif %}
                    {% endif %}
                {% endfor %}
            </div>

            <div class="flex justify-center mt-6 mb-6">
                <button class="bg-green-500 hover:bg-green-600 text-white font-bold py-2 px-4 rounded transition ease-in duration-200"
                        onclick="return confirm('Are you sure you want to apply these new settings?')"
                        type="submit">Save Changes
                </button>
            </div>

            <div class="flex justify-center mt-6 mb-6">
                <a href="{{ path('admin_page') }}"
                   class="bg-blue-500 hover:bg-blue-600 text-white font-bold py-2 px-4 rounded transition ease-in duration-200">
                    Return Dashboard
                </a>
            </div>

        </form>
    </div>
{% endblock %}
