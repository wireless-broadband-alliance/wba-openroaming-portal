{% extends 'base.html.twig' %}

{% block title %}Admin Page WBA{% endblock %}

{% block body %}
    <div class="container mx-auto px-4">
        {% include 'admin/partials/_header_admin.html.twig' %}
        {% for message in app.session.flashbag.get('success_admin') %}
            <div class="text-white text-base bg-primary border-primary mt-5 rounded-md p-2 text-center">{{ message }}</div>
        {% endfor %}
        <form action="{{ path('admin_confirm_reset') }}" method="post" enctype="multipart/form-data">
            <div class="flex flex-col md:flex-row justify-evenly items-center">
                <div class="mt-6">
                    <button class="bg-primary text-white font-bold py-2 px-4 rounded transition duration-150 ease-in-out hover:shadow-md motion-reduce:transition-none hover:transform hover:scale-105"
                            onclick="return confirm('Are you sure you want to apply these new settings?')"
                            type="submit">Save Changes
                    </button>
                </div>
            </div>

        </form>
    </div>
{% endblock %}
