{% extends 'base.html.twig' %}

{% block title %}Admin Page WBA{% endblock %}

{% block body %}
    <div class="container mx-auto px-4">
        <div class="py-8 text-center">
            <h1 class="text-3xl font-semibold">Admin Setting Page - WBA</h1>
            <p class="text-gray-500 mt-2">This page is for admin use only. Still in development.</p>
        </div>

        <form action="{{ path('admin_dashboard_settings') }}" method="post">
            {{ form_row(form._token) }}
            <h2 class="text-center text-xl font-semibold mb-5">Main Settings</h2>
            <div class="grid gap-4 md:grid-cols-2 lg:grid-cols-3">
                {# Choice Cards - Main Cards #}
                {% set inputSettings = settings|filter(item => form[item.name] is defined and form[item.name].vars.block_prefixes[1] == 'choice') %}
                {% for setting in inputSettings %}
                    {# Exclude the settings you don't want to show #}
                    {% if setting.name not in ['CUSTOMER_LOGO', 'OPENROAMING_LOGO', 'WALLPAPER_IMAGE', 'PAGE_TITLE', 'WELCOME_TEXT', 'WELCOME_DESCRIPTION'] %}
                        <div class="border border-gray-300 rounded-lg p-4">
                            <div class="text-sm font-medium text-gray-700 mb-2 text-center">
                                {{ setting.name }}
                            </div>
                            <div class="border border-gray-300 rounded-md p-2 bg-gray-50">
                                {{ form_widget(form[setting.name], {'attr': {'class': 'text-gray-700 text-base block w-full p-2 shadow-sm focus:outline-none focus:ring-2'}}) }}
                                {{ form_label(form[setting.name], null, {'label_attr': {'class': 'hidden'}}) }}
                                {{ form_errors(form[setting.name]) }}
                            </div>
                        </div>
                    {% endif %}
                {% endfor %}
            </div>

            <hr class="my-8 border-t-2 border-gray-300">

            <h2 class="text-center text-lg font-semibold">Sub Settings</h2>
            <div class="grid gap-4 md:grid-cols-2 lg:grid-cols-3 mt-5">
                {# Content Types Cards - Sub Cards#}
                {% set contentSettings = settings|filter(item => form[item.name] is defined and form[item.name].vars.block_prefixes[1] != 'choice') %}
                {% for setting in contentSettings %}
                    {# Exclude the settings you don't want to show #}
                    {% if setting.name not in ['CUSTOMER_LOGO', 'OPENROAMING_LOGO', 'WALLPAPER_IMAGE', 'PAGE_TITLE', 'WELCOME_TEXT', 'WELCOME_DESCRIPTION'] %}
                        <div class="border border-gray-300 rounded-lg p-4">
                            <div class="text-sm font-medium text-gray-700 mb-2 text-center">
                                {{ setting.name }}
                            </div>
                            <div class="border border-gray-300 rounded-md p-2">
                                {# Set the empty values to "Not Defined" #}
                                {% set value = form[setting.name].vars.value %}
                                {% set displayValue = value|default('Not Defined') %}
                                {% if value is empty %}
                                    {{ form_widget(form[setting.name], {'value': displayValue, 'attr': {'class': 'text-base block w-full rounded-md p-2 shadow-sm focus:outline-none focus:ring-2'}}) }}
                                {% else %}
                                    {{ form_widget(form[setting.name], {'attr': {'class': 'text-gray-500 text-base block w-full rounded-md p-2 shadow-sm focus:outline-none focus:ring-2'}}) }}
                                    {{ form_errors(form[setting.name]) }}
                                {% endif %}
                            </div>
                        </div>
                    {% endif %}
                {% endfor %}
            </div>
            <div class="flex justify-center mt-6 mb-6">
                <button class="bg-green-500 hover:bg-green-600 text-white font-bold py-2 px-4 rounded transition ease-in duration-200"
                        onclick="return confirm('Are you sure you want to apply these new settings?')"
                        type="submit">Save Changes
                </button>
            </div>

            <div class="flex justify-center mt-6 mb-6">
                <a href="{{ path('admin_page') }}"
                   class="bg-blue-500 hover:bg-blue-600 text-white font-bold py-2 px-4 rounded transition ease-in duration-200">
                    Return Dashboard
                </a>
            </div>

        </form>
    </div>
{% endblock %}
