{# Header - Title - left conner  #}
<div class="flex flex-row items-center -pl-2"> <!-- Added a flex container for user icon and title -->
    {% if app.request.attributes.get('_route') == 'admin_page' %}
        <svg class="w-10 mt-0.5" fill="none" stroke="currentColor" stroke-width="1.5"
             viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round"
                  d="M15.75 6a3.75 3.75 0 11-7.5 0 3.75 3.75 0 017.5 0zM4.501 20.118a7.5 7.5 0 0114.998 0A17.933 17.933 0 0112 21.75c-2.676 0-5.216-.584-7.499-1.632z"></path>
        </svg>
        <h1 class="text-2xl font-semibold p-5">Users</h1>
    {% elseif app.request.attributes.get('_route') == 'admin_dashboard_settings' %}
        <svg class="w-10 mt-0.5" fill="none" stroke="currentColor"
             stroke-width="1.5"
             viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round"
                  d="M19.5 14.25v-2.625a3.375 3.375 0 00-3.375-3.375h-1.5A1.125 1.125 0 0113.5 7.125v-1.5a3.375 3.375 0 00-3.375-3.375H8.25m0 12.75h7.5m-7.5 3H12M10.5 2.25H5.625c-.621 0-1.125.504-1.125 1.125v17.25c0 .621.504 1.125 1.125 1.125h12.75c.621 0 1.125-.504 1.125-1.125V11.25a9 9 0 00-9-9z"></path>
        </svg>
        <h1 class="text-2xl font-semibold p-5">Main Settings</h1>
    {% elseif app.request.attributes.get('_route') == 'admin_dashboard_customize' %}
        <svg class="w-10 mt-0.5" fill="none" stroke="currentColor"
             stroke-width="1.5" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"
             aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round"
                  d="M16.862 4.487l1.687-1.688a1.875 1.875 0 112.652 2.652L10.582 16.07a4.5 4.5 0 01-1.897 1.13L6 18l.8-2.685a4.5 4.5 0 011.13-1.897l8.932-8.931zm0 0L19.5 7.125M18 14v4.75A2.25 2.25 0 0115.75 21H5.25A2.25 2.25 0 013 18.75V8.25A2.25 2.25 0 015.25 6H10"></path>
        </svg>
        <h1 class="text-2xl font-semibold p-5">Page Style</h1>
    {% endif %}
</div>

<div class="relative">
    {# Header - Button - right conner - Main #}
    <button
            data-controller="optionsDropDown"
            id="dropdownButton"
            type="button"
            class="cursor-pointer shadow-md w-12 h-12 p-2 rounded-full duration-300"
    >
        <svg fill="none" stroke="currentColor" stroke-width="1.5" viewBox="0 0 24 24"
             xmlns="http://www.w3.org/2000/svg" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round"
                  d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5"></path>
        </svg>
    </button>
    {# Header - Button - right conner - Items #}
    <div id="dropdown"
         class="z-10 hidden bg-white divide-y divide-gray-100 rounded-lg shadow-xl min-w-max absolute right-0 mt-2">
        <ul class="py-2 text-sm" aria-labelledby="dropdownButton">
            {# Header - Button - Reset Password #}
            <li>
                <a href="{{ path('admin_reset_password', {'id': app.user.id}) }}"
                   class="flex items-center space-x-2 px-4 py-2 mx-2 hover:bg-veryDarkButton hover:text-white duration-300 rounded">
                    <svg class="w-7 pr-2" fill="none" stroke="currentColor" stroke-width="1.5"
                         viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg" aria-hidden="true">
                        <path stroke-linecap="round" stroke-linejoin="round"
                              d="M16.5 10.5V6.75a4.5 4.5 0 10-9 0v3.75m-.75 11.25h10.5a2.25 2.25 0 002.25-2.25v-6.75a2.25 2.25 0 00-2.25-2.25H6.75a2.25 2.25 0 00-2.25 2.25v6.75a2.25 2.25 0 002.25 2.25z"></path>
                    </svg>
                    Reset Password
                </a>
            </li>
            {# Header - Button - Download Profile #}
            <li>
                <a href="{{ path('app_landing') }}"
                   class="flex items-center space-x-2 px-4 py-2 my-2 mx-2 hover:bg-veryDarkButton hover:text-white duration-300 rounded">
                    <svg class="w-7 pr-2" fill="none" stroke="currentColor" stroke-width="1.5"
                         viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg" aria-hidden="true">
                        <path stroke-linecap="round" stroke-linejoin="round"
                              d="M19.5 14.25v-2.625a3.375 3.375 0 00-3.375-3.375h-1.5A1.125 1.125 0 0113.5 7.125v-1.5a3.375 3.375 0 00-3.375-3.375H8.25m.75 12l3 3m0 0l3-3m-3 3v-6m-1.5-9H5.625c-.621 0-1.125.504-1.125 1.125v17.25c0 .621.504 1.125 1.125 1.125h12.75c.621 0 1.125-.504 1.125-1.125V11.25a9 9 0 00-9-9z"></path>
                    </svg>
                    Download Profile
                </a>
            </li>
            <li class="py-1">
                <hr class="border-gray-300/50">
            </li>
            {# Header - Button - Logout #}
            <li>
                <a href="{{ path('saml_logout') }}"
                   onclick="return confirm('Are you sure you to leave?')"
                   class="flex items-center space-x-2 px-4 py-2 my-2 mx-2 hover:bg-veryDarkButton hover:text-white duration-300 rounded">
                    <svg class="w-7 pr-2" fill="none" stroke="currentColor" stroke-width="1.5"
                         viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg" aria-hidden="true">
                        <path stroke-linecap="round" stroke-linejoin="round"
                              d="M15.75 9V5.25A2.25 2.25 0 0013.5 3h-6a2.25 2.25 0 00-2.25 2.25v13.5A2.25 2.25 0 007.5 21h6a2.25 2.25 0 002.25-2.25V15M12 9l-3 3m0 0l3 3m-3-3h12.75"></path>
                    </svg>
                    Logout
                </a>
            </li>
        </ul>
    </div>
</div>
{# Header - Button - Hamburger (only used in lower resolutions - Opens sidebar) #}
<button id="sidebarButton" data-controller="sideBar"
        class="block hamburger md:hidden focus:outline-none mt-3">
    <span class="hamburger-top"></span>
    <span class="hamburger-middle"></span>
    <span class="hamburger-bottom"></span>
</button>
