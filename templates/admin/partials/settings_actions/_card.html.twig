{% set setting = form[name] %}

<div name="customCards"
     class="bg-white w-full flex flex-col px-5 py-3 rounded-lg shadow transition hover:-translate-y-1 ">
    {# Title and info icon #}
    <div class="flex justify-between">
        <h1 class="text-lg font-medium">{{ displayName }}</h1>
        <img class="w-6 cursor-pointer" name="descriptionIcon" alt="info_icon"
             src="{{ asset('resources/logos/info_icon.svg') }}"/>
    </div>

    {% if settingType == 'image' %}
        <div class="image-container flex flex-grow items-center justify-between gap-4 mt-5 lg:mt-3 mb-2">
            {# Image Preview #}
            <img data-image-preview src="{{ imagePath ?? '' }}" alt="CustomizationImages"
                 class="w-1/2 max-h-48 shadow rounded-md object-contain">
            {# Upload Button #}
            <button class="p-1 bg-gray-100 rounded-lg w-24 flex flex-col justify-center items-center relative z-0 cursor-pointer mx-auto"
                    data-image-input>
                {{ form_widget(setting, {'attr': {'class': 'w-full h-full opacity-0 absolute top-0 left-0'}}) }}
                <div class="upload-button">
                    <svg class="w-6 h-6 p-1 justify-center items-center" fill="none"
                         stroke="currentColor" stroke-width="3" viewBox="0 0 24 24"
                         xmlns="http://www.w3.org/2000/svg" aria-hidden="true">
                        <path stroke-linecap="round" stroke-linejoin="round"
                              d="M3 16.5v2.25A2.25 2.25 0 005.25 21h13.5A2.25 2.25 0 0021 18.75V16.5m-13.5-9L12 3m0 0l4.5 4.5M12 3v13.5">
                        </path>
                    </svg>
                    <label class="text-center text-gray-800 text-opacity-60 text-xs font-medium">
                        Upload Image
                    </label>
                </div>

            </button>
        </div>

    {% elseif settingType == 'text' %}
        <div class="mt-5 mb-1">
            {{ form_widget(setting, {'attr': {'class': 'p-2 bg-transparent border outline-none text-left text-base block w-full rounded-md  focus:shadow-sm'}}) }}
        </div>
    {% elseif settingType == 'choice' %}
        <div class="flex flex-col items-center space-y-2 mt-5">
            {# Render "ON" Radio Input #}
            <label class="flex flex-row justify-between border hover:border-gray-900 duration-200 rounded-lg w-full p-2 pl-4">
                On
                <input type="radio" name="{{ form.CUSTOMER_LOGO_ENABLED.vars.full_name }}"
                       value="true"
                       class="radio-input hidden"{{ form.CUSTOMER_LOGO_ENABLED.vars.value == "true" ? ' checked' : '' }}>
                <div class="custom-radio pr-3 pt-1.5">
                    <svg xmlns="http://www.w3.org/2000/svg" width="14" height="10" viewBox="0 0 14 10" fill="none">
                        <path fill-rule="evenodd" clip-rule="evenodd" d="M13.0303 0.96967C13.3232 1.26256 13.3232 1.73744 13.0303 2.03033L6.03033 9.03033C5.73744 9.32322 5.26256 9.32322 4.96967 9.03033L0.96967 5.03033C0.676777 4.73744 0.676777 4.26256 0.96967 3.96967C1.26256 3.67678 1.73744 3.67678 2.03033 3.96967L5.5 7.43934L11.9697 0.96967C12.2626 0.676777 12.7374 0.676777 13.0303 0.96967Z" fill="#210124"/>
                    </svg>
                </div>
            </label>

            {# Render "OFF" Radio Input #}
            <label class="flex flex-row justify-between border hover:border-gray-900 duration-200 rounded-lg w-full p-2 pl-4">
                Off
                <input type="radio" name="{{ form.CUSTOMER_LOGO_ENABLED.vars.full_name }}"
                       value="false"
                       class="radio-input hidden"{{ form.CUSTOMER_LOGO_ENABLED.vars.value == "false" ? ' checked' : '' }}>
                <div class="custom-radio pr-3 pt-1.5">
                    <svg xmlns="http://www.w3.org/2000/svg" width="14" height="10" viewBox="0 0 14 10" fill="none">
                        <path fill-rule="evenodd" clip-rule="evenodd" d="M13.0303 0.96967C13.3232 1.26256 13.3232 1.73744 13.0303 2.03033L6.03033 9.03033C5.73744 9.32322 5.26256 9.32322 4.96967 9.03033L0.96967 5.03033C0.676777 4.73744 0.676777 4.26256 0.96967 3.96967C1.26256 3.67678 1.73744 3.67678 2.03033 3.96967L5.5 7.43934L11.9697 0.96967C12.2626 0.676777 12.7374 0.676777 13.0303 0.96967Z" fill="#210124"/>
                    </svg>
                </div>
            </label>
        </div>
    {% endif %}

    {# Setting Description #}
    <div class="flex justify-center items-center">
        <div name="description"
             class="bg-indigo-400 rounded-lg p-2 m-2 w-3/4 text-center text-white transition transform -translate-y-6 ease-in-out duration-300 absolute hidden">
            {{ setting.vars.attr.description }}
        </div>
    </div>

    <div class="mt-2 -mb-2 text-center text-red-500 text-base">
        {{ form_errors(setting) }}
    </div>
</div>
