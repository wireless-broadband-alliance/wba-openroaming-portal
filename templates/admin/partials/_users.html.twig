{# Table Content #}
<tr
        class="bg-white text-xs whitespace-nowrap">
    {# UUID #}
    <td class="px-12 py-4 font-medium">
        {{ user.uuid is defined ? user.uuid : 'No information' }}
    </td>
    {# Email #}
    <td class="px-4 py-4 -ml-4">
        {% if user.email is not null %}
            {{ user.email }}
        {% else %}
            <p class="font-semibold p-1">
				<span class="p-1.5 text-red-400 bg-red-100/50 rounded-full">
					No Information
				</span>
            </p>
        {% endif %}
    </td>
    {# User Provider #}
    <td class="px-4 py-4">
        {% if user.googleId is defined and user.googleId == true %}
            <p class="text-left ml-1 p-1">
                Google Account
            </p>
        {% elseif user.saml_identifier is defined and user.saml_identifier == true %}
            <p class="text-left ml-1 p-1">
                SAML
            </p>
        {% else %}
            <p class="text-left ml-1 p-1">
                Portal Account
            </p>
        {% endif %}
    </td>
    {# User Verification #}
    <td class="px-4 py-4 ">
        {% if user.isVerified is defined and user.isVerified == 0 %}
            <p class="font-semibold p-1">
				<span class="p-1.5 text-red-400 bg-red-100/50 rounded-full">
					Not Verified
				</span>
            </p>
        {% else %}
            <p class="font-semibold p-1">
				<span class="p-1.5 text-green-400 bg-green-100/50 rounded-full">
					Verified
				</span>
            </p>
        {% endif %}
    </td>
    {# Banned At #}
    <td class="px-4 py-4 text-left">
        {% if user.getBannedAt %}
            <p class="font-semibold p-1">
				<span class="p-1.5 text-red-400 bg-red-100/50 rounded-full">
					{{ user.getBannedAt()|date('d/m/Y H:i') }}
				</span>
            </p>
        {% else %}
            <p class="font-semibold p-1">
				<span class="p-1.5 text-green-400 bg-green-100/50 rounded-full">
					Not Banned
				</span>
            </p>
        {% endif %}
    </td>
    {# Created At #}
    <td class="px-6 py-4">
        <div class="font-medium">
            <p>{{ user.getCreatedAt()|date('d/m/Y H:i') }}</p>
        </div>
    </td>
    {# Actions Buttons #}
    <td class="px-10 py-4 text-right">
        {# Items Button Dropdown #}
        <button name="itemsDropDownButton" class="cursor-pointer p-2 rounded-lg hover:shadow duration-300"
                type="button">
            <svg class="w-5 h-5" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewbox="0 0 4 15">
                <path d="M3.5 1.5a1.5 1.5 0 1 1-3 0 1.5 1.5 0 0 1 3 0Zm0 6.041a1.5 1.5 0 1 1-3 0 1.5 1.5 0 0 1 3 0Zm0 5.959a1.5 1.5 0 1 1-3 0 1.5 1.5 0 0 1 3 0Z"/>
            </svg>
        </button>

        {# Items List Dropdown #}
        <div name="itemsDropDown"
             class="hidden bg-white divide-y divide-gray-100 rounded-lg shadow min-w-max absolute right-16 mt-2 z-10">
            <ul class="py-2 text-gray-700">
                <li>
                    <a href="{{ path('admin_update', {id : user.id}) }}"
                       class="flex flex-row items-center px-2 py-2 mx-2 my-2 hover:bg-veryDarkButton hover:text-white duration-300 rounded">
                        <svg class="w-5 mr-3" fill="none" stroke="currentColor" stroke-width="1.5" viewbox="0 0 24 24"
                             xmlns="http://www.w3.org/2000/svg">
                            <path stroke-linecap="round" stroke-linejoin="round"
                                  d="M16.862 4.487l1.687-1.688a1.875 1.875 0 112.652 2.652L10.582 16.07a4.5 4.5 0 01-1.897 1.13L6 18l.8-2.685a4.5 4.5 0 011.13-1.897l8.932-8.931zm0 0L19.5 7.125M18 14v4.75A2.25 2.25 0 0115.75 21H5.25A2.25 2.25 0 013 18.75V8.25A2.25 2.25 0 015.25 6H10"></path>
                        </svg>
                        Edit</a>
                </li>
                <li>
                    <form id="deleteForm{{ user.id }}" action="{{ path('admin_delete', {id: user.id}) }}" method="post"
                          style="display: inline;">
                        <input type="hidden" name="_method" value="DELETE">
                        <a data-user-id="{{ user.id }}" data-user-uuid="{{ user.uuid }}" href="javascript:void(0)"
                           class="delete-users-button flex flex-row items-center px-2 py-2 mx-2 my-2 hover:bg-veryDarkButton hover:text-white duration-300 rounded">
                            <svg class="w-5 mr-3" fill="none" stroke="currentColor" stroke-width="1.5"
                                 viewbox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                                <path stroke-linecap="round" stroke-linejoin="round"
                                      d="M14.74 9l-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 01-2.244 2.077H8.084a2.25 2.25 0 01-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 00-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 013.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 00-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 00-7.5 0"></path>
                            </svg>
                            Delete
                        </a>
                    </form>
                </li>
            </ul>
        </div>
    </td>
</tr>
