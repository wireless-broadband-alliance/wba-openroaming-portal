<div class="grid gap-8 sm:gap-12 lg:gap-16 lg:grid-cols-3" data-controller="descriptionCard statistics">
    {# Devices #}
    <div class="bg-white rounded-lg px-5 py-3 flex flex-col gap-6 shadow">
        <h1 class="text-lg font-medium text-left">Devices</h1>
        <canvas class="max-w-full" id="devicesChart" data-devices
                data-chart-data="{{ devicesDataJson }}"></canvas>
    </div>
    {# Authentication #}
    <div class="bg-white rounded-lg px-5 py-3 flex flex-col gap-6 shadow">
        <h1 class="text-lg font-medium text-left">Authentication</h1>
        <canvas class="max-w-full" id="authenticationChart" data-authentication
                data-chart-data="{{ authenticationDataJson }}"></canvas>
    </div>
    {# SMS & Email #}
    <div class="bg-white rounded-lg px-5 py-3 flex flex-col gap-6 shadow">
        <h1 class="text-lg font-medium text-left">Portal with SMS or Email</h1>
        <canvas class="max-w-full" id="SMSEmailChart" data-SMSEmail
                data-chart-data="{{ SMSEmailDataJson }}"></canvas>
    </div>
    {# Platform Status #}
    <div class="bg-white rounded-lg px-5 py-3 flex flex-col gap-6 shadow">
        <h1 class="text-lg font-medium text-left">User created in</h1>
        <canvas class="max-w-full" id="platformStatusChart" data-platformStatus
                data-chart-data="{{ platformStatusDataJson }}"></canvas>
    </div>
    {# Users Manegement #}
    <div class="bg-white rounded-lg px-5 py-3 flex flex-col gap-6 shadow">
        <h1 class="text-lg font-medium text-left">Users Management</h1>
        <canvas class="max-w-full" id="userVerifiedChart" data-userVerified
                data-chart-data="{{ usersVerifiedDataJson }}"></canvas>
    </div>
</div>
