{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
    <div class="flex flex-col justify-center items-center min-h-screen bg-gray-100">
        <div class="bg-white p-8 rounded-lg shadow-lg">
            <h1 class="text-2xl font-bold mb-4">Please sign in</h1>
            <form method="post"
                  class="w-full">
                {% if error %}
                    <div class="bg-red-100 text-red-700 p-3 rounded mb-4">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}

                {% if app.user %}
                    <div class="mb-4 text-center">
                        You are logged in as {{ app.user.userIdentifier }},
                        <a href="{{ path('app_logout') }}"
                           class="text-blue-500 hover:underline">Logout</a>
                    </div>
                {% endif %}

                <div class="mb-4">
                    <label for="inputUsername"
                           class="block mb-1 font-bold">Username</label>
                    <input type="text"
                           value="{{ last_username }}"
                           name="Username"
                           id="inputUsername"
                           class="w-full px-4 py-2 rounded border-gray-300 focus:border-blue-500 focus:ring-2 focus:ring-blue-500"
                           autocomplete="username"
                           required
                           autofocus>
                </div>
                <div class="mb-4">
                    <label for="inputPassword"
                           class="block mb-1 font-bold">Password</label>
                    <input type="password"
                           name="password"
                           id="inputPassword"
                           class="w-full px-4 py-2 rounded border-gray-300 focus:border-blue-500 focus:ring-2 focus:ring-blue-500"
                           autocomplete="current-password"
                           required>
                </div>

                <input type="hidden"
                       name="_csrf_token"
                       value="{{ csrf_token('authenticate') }}">

                {#
                Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                See https://symfony.com/doc/current/security/remember_me.html

                <div class="checkbox mb-3">
                    <label>
                        <input type="checkbox" name="_remember_me"> Remember me
                    </label>
                </div>
                #}

                <button class="bg-blue-500 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline hover:bg-blue-600"
                        type="submit">
                    Sign in
                </button>
            </form>
        </div>
    </div>
{% endblock %}
