<div {{ stimulus_controller('cookie') }} {{ stimulus_target('cookie', 'modal') }}
        class="flex items-center justify-center relative">

    {# Cookie Banner #}
    <section class="w-full p-5 bg-slate-200 fixed top-0 left-0 right-0 z-50" {{ stimulus_target('cookie', 'banner') }}>
        <div class="md:flex items-center">
            <div class="md:flex-1 text-center md:text-left text-xs">By
                accepting the cookies you consent to the use of these technologies, download and install an OpenRoaming
                profile tailored to your device, as part of the WBA OpenRoaming program. WBAâ€™s profiles are proven
                to work across a broad range of devices ensuring optimal compatibility.
            </div>
            <div class="mt-3 md:mt-0 flex justify-center md:justify-end space-x-3">
                <button class="py-1 px-2 btn-secondary text-sm"
                        data-action="cookie#showModal">Cookie settings
                </button>
                <button class="py-1 px-2 btn-primary text-sm"
                        data-action="cookie#acceptCookies">Accept cookies
                </button>
            </div>
        </div>
    </section>

    {# Cookie Preferences Modal #}
    <div class="fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center hidden z-50"
            {{ stimulus_target('cookie', 'modalCookie') }}>
        <div class="bg-white w-11/12 md:w-1/2 rounded-lg shadow-lg p-6 space-y-4">
            <div class="flex justify-between items-center border-b pb-3">
                <h2 class="text-lg font-bold">Cookie Settings</h2>
                <button class="text-gray-400 hover:text-gray-800"
                        data-action="cookie#closeModal">
                    <twig:ux:icon name="wba:cross" fill="none"/>
                </button>
            </div>
            {# Preferences List #}
            <div class="space-y-2">
                <div class="flex items-center justify-between">
                    <span>Strictly necessary cookies</span>
                    <span class="text-primary">Enabled</span>
                </div>
                <div class="flex items-center justify-between">
                    <span>Cookies that remember your settings</span>
                    <label>
                        <input type="checkbox" class="form-checkbox" {{ stimulus_target('cookie', 'functional') }}>
                    </label>
                </div>
                <div class="flex items-center justify-between">
                    <span>Cookies that measure website use</span>
                    <label>
                        <input type="checkbox" class="form-checkbox" {{ stimulus_target('cookie', 'analytics') }}>
                    </label>
                </div>
                <div class="flex items-center justify-between">
                    <span>Cookies for communications and marketing</span>
                    <label>
                        <input type="checkbox" class="form-checkbox"{{ stimulus_target('cookie', 'marketing') }}>
                    </label>
                </div>
            </div>

            <div class="text-right mt-4">
                <button class="flex justify-between items-center py-2 px-6 btn-primary"
                        data-action="cookie#savePreferences">Save settings
                </button>
            </div>
        </div>
    </div>
</div>
