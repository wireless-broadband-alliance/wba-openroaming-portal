{% extends '/site/base.html.twig' %}

{% block title %}
    {{ data.title.value }}
{% endblock %}

{% block second_col %}
    {# Form Column #}

    {# Toasts  #}
    <div class="grid grid-cols-1 gap-[5px]">
        {# Flash error message  #}
        {% for message in app.session.flashbag.get('error') %}
            {{ include('site/shared/_toast.html.twig', {toast_type: 'toast-warning'}) }}
        {% endfor %}
    </div>

    {% if data.CUSTOMER_LOGO_ENABLED.value == constant('App\\Enum\\EmailConfirmationStrategy::EMAIL') %}
        <img class="w-[120px] h-[58px] object-scale-down mt-[75px]" src="{{ data.customerLogoName.value }}" alt="Logo"/>
    {% endif %}

    <div class="{{ data.CUSTOMER_LOGO_ENABLED.value == constant('App\\Enum\\EmailConfirmationStrategy::EMAIL') ? 'pt-[28px]' : 'pt-[161px]'}} leading-7">
        <p class="font-bold text-xl">Welcome back</p>
        <p class="text-lg">You have selected to login via email and password. Once you are logged in, please install the
            profile onto
            your device.</p>
    </div>
    {{ form_start(form) }}

    {# UUID #}
    <div class="relative mt-[32px]">
        {{ form_label(form.uuid, null, { 'label_attr': {'class': 'form-label'} }) }}
        {{ form_widget(form.uuid, {
            'attr': {
                'class': 'form-widget',
                'placeholder': 'Enter your email or phone number',
            },
            'full_name' : 'uuid',
        }) }}
    </div>

    {# Password #}
    <div class="relative mt-[32px]">
        {{ form_label(form.password, null, { 'label_attr': {'class': 'form-label'} }) }}
        {{ form_widget(form.password, {
            'attr': {
                'class': 'form-widget',
                'placeholder': 'Enter your password',
            },
            'full_name' : 'password',
        }) }}
    </div>

    {# Turnstile Checker #}
    {% if data.TURNSTILE_CHECKER.value == constant('App\\Enum\\EmailConfirmationStrategy::EMAIL') %}
        <div class="ml-3 mt-5">
            {{ form_row(form.security, {'full_name': 'security'}) }}
        </div>
    {% endif %}

    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

    <div class="my-[32px] flex justify-start gap-4">
        <button type="submit" class="w-[220px] btn-primary">
            Log in
        </button>
        {% if data.PLATFORM_MODE.value != constant('App\\Enum\\PlatformMode::Demo') %}
            <a href="{{ path('app_landing') }}" class="w-[220px] btn-secondary">
                Choose Another
            </a>
        {% endif %}
    </div>
    {{ form_rest(form) }}
    {{ form_end(form) }}
{% endblock %}
