{% extends '/site/base_landing.html.twig' %}

{% block title %}
    {{ data.title.value }}
{% endblock %}

{% block second_col %}
    {# Form Column #}

    {% for message in app.session.flashbag.get('error') %}
        {{ include('site/shared/_toast.html.twig', {toast_type: 'toast-warning'}) }}
    {% endfor %}

    <img class="w-[120px] h-[58px] object-scale-down mt-[75px]" src="{{ data.customerLogoName.value }}" alt="Logo"/>

    <div class="pt-[28px] leading-7">
        <p class="font-bold text-xl">Welcome Back</p>
        <p class="text-lg">You have selected to login via email and password. Once you are logged in, please install the
            profile onto
            your device.</p>
    </div>

    <form method="POST" action="{{ path('app_login') }}">
        <div class="my-[32px] space-y-7">
            {# Email/Phone Number #}
            <div class="relative">
                <label for="uuid" class="form-label">
                    {% if data.EMAIL_REGISTER_ENABLED %}Email{% endif %}

                    {% if data.EMAIL_REGISTER_ENABLED and data.AUTH_METHOD_SMS_REGISTER_ENABLED %}or{% endif %}

                    {% if data.AUTH_METHOD_SMS_REGISTER_ENABLED %}Phone Number{% endif %}
                </label>
                <input id="uuid" name="uuid" type="text" class="form-widget"
                       value="{{ last_username }}" placeholder="Enter your email or phone number" required autofocus/>
            </div>

            {# Password #}
            <div class="relative">
                <label for="inputPassword" class="form-label">Password</label>
                <input id="inputPassword" name="password" class="form-widget" type="password"
                       placeholder="Enter your password" autocomplete="current-password" required/>
            </div>
        </div>

        {# Token #}
        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

        <div class="my-[32px] flex justify-start gap-4">
            <button type="submit" class="w-[220px] btn-primary">
                Log in
            </button>

            {# Todo: What to do with this? #}
            {% if data.PLATFORM_MODE != constant('App\\Enum\\PlatformMode::Demo') %}
                <a href="{{ path('app_landing') }}" class="w-[220px] btn-secondary">
                    Choose Another
                </a>
            {% endif %}
        </div>

        {% if data.EMAIL_REGISTER_ENABLED.value or data.AUTH_METHOD_SMS_REGISTER_ENABLED.value %}
            {# Divider #}
            <div class="my-[25px] divider"></div>

            <p class="text-xs">You don't have an account? Register with

                {% if data.EMAIL_REGISTER_ENABLED %}<a href="{{ path('app_register') }}"
                                                       class="font-semibold text-primary underline">email</a>{% endif %}

                {% if data.EMAIL_REGISTER_ENABLED and data.AUTH_METHOD_SMS_REGISTER_ENABLED %}or{% endif %}

                {% if data.AUTH_METHOD_SMS_REGISTER_ENABLED %}<a href="{{ path('app_register_sms') }}"
                                                                 class="font-semibold text-primary underline">phone
                    number</a>.{% endif %}

            </p>
        {% endif %}
    </form>

{% endblock %}
