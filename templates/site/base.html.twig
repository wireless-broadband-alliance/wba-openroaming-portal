{% extends 'base.html.twig' %}

{% block title %}
    {{ data.title.value }}
{% endblock %}

{% block body %}
    <div class="flex flex-col md:min-h-screen md:flex-row">
        {# Fixed First Column #}
        <div class="w-full md:w-1/2 lg:w-1/2 md:h-auto lg:h-screen bg-center bg-no-repeat bg-cover"
             style="background-image: url('/resources/images/background.png');">
            <div class="w-full h-full p-8 lg:pl-[130px] lg:pr-[150px] lg:pt-[210px] bg-top bg-no-repeat bg-contain"
                 style="background-image: url('{{ data.wallpaperImageName.value }}');">
                <div class="h-full w-full flex flex-col">
                    <img class="w-96" src="{{ data.openroamingLogoName.value }}" alt="OpenRoaming Logo"/>

                    <h1 class="text-5xl font-segoe text-white mt-[55px] font-bold">{{ data.welcomeText.value }}</h1>

                    <p class="text-white text-2xl mt-[45px] leading-7">{{ data.welcomeDescription.value }}</p>

                    <p class="text-white text-lg mt-[55px] mb-6">
                        Should you have any questions or require assistance, please contact us at
                        <a href="mailto:{{ data.contactEmail.value }}"
                           class="font-semibold underline text-primary">{{ data.contactEmail.value }}</a>
                    </p>
                </div>
            </div>
        </div>

        {# Scrollable Second Column #}
        <div class="w-full md:w-1/2 lg:w-1/2 md:h-auto lg:h-screen overflow-y-auto p-8 lg:pl-[90px] lg:pr-[130px] lg:pt-[74px]"
                {{ stimulus_controller('visibility') }}>
            {% block second_col %}
            {% endblock %}
            {# Cookie Banner #}
            {% block cookie %}
                <div class="grid grid-cols-1 gap-[5px]">
                    {% if isEEAUser() != constant('App\\Enum\\GeoLocation\\IsEEAHandler::IN_EEA').value %}
                        {{ include('site/shared/_cookie_banner.html.twig') }}
                    {% endif %}
                </div>
            {% endblock %}
        </div>
    </div>
{% endblock %}
